      <pou name="PwmSignal" pouType="function">
        <interface>
          <returnType>
            <REAL />
          </returnType>
          <inputVars>
            <variable name="ymin">
              <type>
                <REAL />
              </type>
              <documentation>
                <xhtml xmlns="http://www.w3.org/1999/xhtml">Minimalwert</xhtml>
              </documentation>
            </variable>
            <variable name="ymax">
              <type>
                <REAL />
              </type>
              <documentation>
                <xhtml xmlns="http://www.w3.org/1999/xhtml">Maximalwert</xhtml>
              </documentation>
            </variable>
            <variable name="w">
              <type>
                <REAL />
              </type>
              <documentation>
                <xhtml xmlns="http://www.w3.org/1999/xhtml">Kreisfrequenz</xhtml>
              </documentation>
            </variable>
            <variable name="yoff">
              <type>
                <REAL />
              </type>
              <documentation>
                <xhtml xmlns="http://www.w3.org/1999/xhtml">yoffset</xhtml>
              </documentation>
            </variable>
            <variable name="PWM">
              <type>
                <REAL />
              </type>
              <documentation>
                <xhtml xmlns="http://www.w3.org/1999/xhtml">PWM 0.0 ... 1.0%</xhtml>
              </documentation>
            </variable>
            <variable name="t">
              <type>
                <REAL />
              </type>
              <documentation>
                <xhtml xmlns="http://www.w3.org/1999/xhtml">Zeit</xhtml>
              </documentation>
            </variable>
          </inputVars>
          <localVars>
            <variable name="tempTime">
              <type>
                <REAL />
              </type>
            </variable>
          </localVars>
        </interface>
        <body>
          <ST>
            <xhtml xmlns="http://www.w3.org/1999/xhtml">tempTime := LMOD(lr_Value:=t,lr_Arg:=(2*PI)/w)/((2*PI)/w);

IF(PWM = 1) THEN
	PwmSignal := ymax + yoff;
	RETURN;
END_IF
IF(tempTime &lt;= (1-PWM)) THEN
	PwmSignal := ymin + yoff;
	RETURN;
ELSE
	PwmSignal := ymax + yoff;
	RETURN;
END_IF</xhtml>
          </ST>
        </body>
        <addData>
          <data name="http://www.3s-software.com/plcopenxml/interfaceasplaintext" handleUnknown="implementation">
            <InterfaceAsPlainText>
              <xhtml xmlns="http://www.w3.org/1999/xhtml">FUNCTION PwmSignal : REAL
VAR_INPUT
	ymin:				REAL; 	//Minimalwert
	ymax:				REAL; 	//Maximalwert
	w:					REAL; 	//Kreisfrequenz
	yoff:				REAL; 	//yoffset
	PWM:				REAL;	//PWM 0.0 ... 1.0%
	t : 				REAL;	//Zeit
END_VAR
VAR
	tempTime:			REAL;
END_VAR
</xhtml>
            </InterfaceAsPlainText>
